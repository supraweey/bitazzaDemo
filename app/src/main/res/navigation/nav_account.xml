<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_account"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.bitazzademo.ui.account.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/actionSignUp"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/actionForgotPassword"
            app:destination="@id/forgotPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.bitazzademo.ui.account.SignUpFragment"
        android:label="SignUpFragment" />
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.example.bitazzademo.ui.account.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment" />
</navigation>