<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlack323232"
    android:paddingVertical="@dimen/space_10dp"
    android:layout_marginVertical="@dimen/space_06dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgCrypto"
        android:layout_width="@dimen/space_30dp"
        android:layout_height="@dimen/space_30dp"
        android:layout_marginStart="@dimen/space_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvCryptoName"
        app:layout_constraintHorizontal_weight="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_oval_gray" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvCryptoName"
        style="@style/KanitTextViewStyleWhite"
        android:layout_width="@dimen/space_00dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingHorizontal="@dimen/space_08dp"
        android:textColor="@color/colorGrayCCCCCC"
        android:textSize="@dimen/text_size_20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvPrice1"
        app:layout_constraintHorizontal_weight="0.25"
        app:layout_constraintStart_toEndOf="@id/imgCrypto"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="BTCTHB" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvVolumePrice"
        style="@style/KanitTextViewStyleWhite"
        android:layout_width="@dimen/space_00dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingHorizontal="@dimen/space_08dp"
        android:textColor="@color/colorGrayCCCCCC"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintEnd_toEndOf="@+id/tvCryptoName"
        app:layout_constraintStart_toStartOf="@id/tvCryptoName"
        app:layout_constraintTop_toBottomOf="@+id/tvCryptoName"
        tools:text="0.00005" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice1"
        style="@style/KanitTextViewStyleWhite"
        android:layout_width="@dimen/space_00dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/colorGrayCCCCCC"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imgPercent"
        app:layout_constraintHorizontal_weight="0.1"
        app:layout_constraintStart_toEndOf="@+id/tvCryptoName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="0.00005" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrice2"
        style="@style/KanitTextViewStyleWhite"
        android:layout_width="@dimen/space_00dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textColor="@color/colorGrayCCCCCC"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintEnd_toEndOf="@+id/tvPrice1"
        app:layout_constraintStart_toStartOf="@+id/tvPrice1"
        app:layout_constraintTop_toTopOf="@+id/tvVolumePrice"
        tools:text="0.00005" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/imgPercent"
        style="@style/KanitTextViewStyleWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_12dp"
        android:background="@drawable/bg_rectangle_radius_green"
        android:padding="@dimen/space_10dp"
        android:text="+0.85%"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.15"
        app:layout_constraintStart_toEndOf="@+id/tvPrice1"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>